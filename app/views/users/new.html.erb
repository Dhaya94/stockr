
<%= form_for @user, html: {class: "col-lg-6 offset-lg-3"} do |f| %>
    <h2>Sign up</h2>
    <div class="mb-3 col-6">
        <%= f.label :first_name, :class => 'form-label' %>
        <%= f.text_field :first_name, :required => true, :class => 'form-control' %>
    </div>
    <div class="mb-3 col-6">
        <%= f.label :last_name, :class => 'form-label' %>
        <%= f.text_field :last_name, :required => true, :class => 'form-control' %>
    </div>
    <div class="mb-3 col-6">
        <%= f.label :email, :class => 'form-label' %>
        <%= f.email_field :email, :required => true, :class => 'form-control' %>
    </div>
    <div class="mb-3 col-6">
        <%= f.label :password, :class => 'form-label' %>    
        <%= f.password_field :password, :class => 'form-control' %>
    </div>
    <div class="mb-3 col-6">
        <%= f.label :password_confirmation, "Confirm Password", :class => 'form-label' %>
        <%= f.password_field :password_confirmation, :class => 'form-control' %>
    </div>
    <%= f.submit "Sign up!", :class => 'btn authentication-btn' %>
<% end %>

<% if @user.errors.any? %>
    <ol>
            <% @user.errors.full_messages.each do |msg|  %>
                <li><%= msg %></li>
            <% end %>
    </ol>
<% end %>