<h1><%= @watchlist.name %></h1>

<% query = BasicYahooFinance::Query.new  %>  

 <% @watchlist.stocks.each do |stock| %>
    <h1> <%= stock.symbol %> </h1> 
    <% info = query.quotes(stock.symbol)%>
    <p> <%= info[stock.symbol]['displayName'] %> </p>
    <p><%= info[stock.symbol]['regularMarketPrice'] %></p> 
    <%= image_tag "https://d3an3cesqmrf1x.cloudfront.net/images/symbols/#{stock.symbol.downcase}.png", :class => 'icon' %> 

    <%=form_for @watchlist, method: :delete, url:"/stocks/#{stock.id}" do |f|%>        
        <%=f.hidden_field :symbol, :value=>stock["symbol"] %>  
        <%=f.hidden_field :id, :value=>@watchlist.id%>      
        <%=f.hidden_field :user_id, :value=>@current_user.id%>    
        <%=f.submit "Delete" %>
    <%end%>
  
   
<% end %>

<div class="controls">
    <%= link_to 'Edit watchlist', edit_watchlist_path(@watchlist) %>
    <%= link_to 'Delete watchlist', @watchlist, :method => 'delete', :data => { :confirm => 'Are you sure?' } %>
</div>
